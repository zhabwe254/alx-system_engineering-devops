#!/bin/bash

# Create a new server block configuration file
sudo touch /etc/nginx/sites-available/redirect.conf

# Add server block configuration (replace "your_target_url" with the actual URL)
cat << EOF >> /etc/nginx/sites-available/redirect.conf
server {
  listen 80;

  location /redirect_me {
    return 301 https://your_target_url;
  }
}
EOF

# Enable the new server block configuration
sudo ln -s /etc/nginx/sites-available/redirect.conf /etc/nginx/sites-enabled/redirect.conf

# Restart Nginx
sudo systemctl restart nginx
