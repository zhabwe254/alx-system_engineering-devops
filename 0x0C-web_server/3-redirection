#!/usr/bin/env bash
# Configure nginx to redirect /redirect_me to another page

# Backup default configuration
cp /etc/nginx/sites-available/default /etc/nginx/sites-available/default.bak

# Create a new server block to handle the redirection
cat <<EOF > /etc/nginx/sites-available/redirect
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    
    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF

# Enable the new server block
ln -sf /etc/nginx/sites-available/redirect /etc/nginx/sites-enabled/redirect

# Restart nginx
service nginx restart
