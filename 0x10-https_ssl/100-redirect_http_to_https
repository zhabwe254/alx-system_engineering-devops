frontend http_front
    bind *:80
    mode http
    option forwardfor
    redirect scheme https code 301 if !{ ssl_fc }

frontend https_front
    bind *:443 ssl crt /etc/ssl/haproxy/
    mode http
    option forwardfor

    # Add your other HTTPS configuration here, if any

    default_backend servers

backend servers
    mode http
    balance roundrobin
    option http-server-close
    option forwardfor
    server server1 10.0.0.1:80 check
    # Add more backend servers if needed
